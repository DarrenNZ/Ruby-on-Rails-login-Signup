

<div class="container">
<h1>Signup!</h1>
<br>
<%= form_for :user, url: '/users' do |f| %>

 <div class="form-group">
  Name:<%= f.text_field :name, autofocus: true, class: "form-control" %>
</div>

 <div class="form-group">
  Email: <%= f.text_field :email, autofocus: true, class: "form-control" %>
</div>

 <div class="form-group">
  Password: <%= f.password_field :password, autofocus: true, class: "form-control" %> 
</div>

 <div class="form-group">
  Password Confirmation: <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
  </div>

<div class="form-group">
  <%= f.submit "Submit" , autofocus: true, class: "btn btn-default"%>
</div>

<% end %>

</div>
